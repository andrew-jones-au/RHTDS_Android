<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search"
        android:id="@+id/searchSearchTextView" />

    <AutoCompleteTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchOrganisationNameEditText"
        android:hint="Organisation Name" />

    <AutoCompleteTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchLocationEditText"
        android:hint="Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/searchCurrentLocationButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type of Service"
        android:id="@+id/searchTypeOfServiceTextView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:id="@+id/searchCategoryListView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchSearchButton" />

</LinearLayout>