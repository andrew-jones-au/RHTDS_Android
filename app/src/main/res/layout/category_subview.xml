        android:textColor="#000000"
        android:layout_gravity="center"
        android:singleLine="false"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:textSize="25dp" />
</LinearLayout>