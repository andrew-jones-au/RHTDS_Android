<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Service Name"
        android:id="@+id/serviceSubviewName"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneIcon"
        android:src="@drawable/phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop ="10dp"
        android:layout_below="@+id/serviceSubviewName"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="6312345678"
        android:id="@+id/serviceSubviewPhone"
        android:layout_alignTop="@+id/phoneIcon"
        android:textColor="#555555"
        android:layout_toRightOf="@+id/phoneIcon"
        android:layout_marginLeft="5dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressIcon"
        android:src="@drawable/home"
        android:layout_below="@+id/serviceSubviewPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop ="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="123 street street"
        android:id="@+id/serviceSubviewAddress"
        android:layout_alignTop="@+id/addressIcon"
        android:textColor="#555555"
        android:layout_toRightOf="@+id/addressIcon"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>